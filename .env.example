# Environment Configuration
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://chat_user:chat_password@localhost:5432/chat_db
DATABASE_ECHO=False

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
EMBEDDING_MODEL=text-embedding-3-small

# Vector Store Configuration
VECTOR_STORE_TYPE=pgvector
VECTOR_DIMENSION=1536

# Authentication
SECRET_KEY=your_secret_key_here_please_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api/v1
API_TITLE=Chat API
API_DESCRIPTION=Advanced AI Chatbot Backend API Platform
API_VERSION=1.0.0
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=["pdf", "txt", "docx", "md"]
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Background Tasks
ENABLE_BACKGROUND_TASKS=True
BACKGROUND_TASK_QUEUE_SIZE=100

# Monitoring and Health Checks
HEALTH_CHECK_TIMEOUT=30
ENABLE_METRICS=True