# Environment Configuration
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
DEBUG=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096

# Database Configuration
DATABASE_URL=postgresql://chatbot:chatbot@localhost:5432/chatbot
DATABASE_ECHO=false

# Vector Store Configuration
VECTOR_STORE_TYPE=postgres
VECTOR_DIMENSION=1536

# Authentication Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Document Processing
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=.pdf,.txt,.md,.docx
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# LLM Configuration
DEFAULT_SYSTEM_PROMPT="You are a helpful AI assistant. Provide accurate and helpful responses to user questions."
CONVERSATION_MEMORY_SIZE=10
ENABLE_STREAMING=true

# CLI Configuration
CLI_HISTORY_FILE=.chat_history